{% extends 'base.html.twig' %}

{% block title %}Persons index{% endblock %}

{% block body %}
    <h1>Persons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Spodziewany koszt</th>
                <th>Typ</th>
                <th>Opis</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for person in persons %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.firstName }}</td>
                <td>{{ person.lastName }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.expectedCost }}</td>
                <td>{{ person.travelType }}</td>
                <td>{{ person.comments }}</td>
                <td>
                    <a href="{{ path('persons_show', {'id': person.id}) }}">Pokaż</a>
                    <a href="{{ path('persons_edit', {'id': person.id}) }}">Edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" role="button" href="{{ path('persons_new') }}">Create new</a>
{% endblock %}
