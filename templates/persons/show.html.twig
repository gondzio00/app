{% extends 'base.html.twig' %}

{% block title %}Persons{% endblock %}

{% block body %}
    <h1>Persons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Expected_cost</th>
                <td>{{ person.expectedCost }}</td>
            </tr>
            <tr>
                <th>Travel_type</th>
                <td>{{ person.travelType }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ person.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('persons_index') }}">back to list</a>

    <a href="{{ path('persons_edit', {'id': person.id}) }}">edit</a>

    {{ include('persons/_delete_form.html.twig') }}
