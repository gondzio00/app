{% extends 'base.html.twig' %}

{% block title %}Uczestnik{% endblock %}

{% block body %}
    <h1>Uczestnik</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Imię</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Oczekiwany koszt wycieczki</th>
                <td>{{ person.expectedCost(true) }}</td>
            </tr>
            <tr>
                <th>Rodzaj podróży</th>
                <td>{{ person.travelType(true) }}</td>
            </tr>
            <tr>
                <th>Dodatkowe uwagi</th>
                <td>{{ person.comments }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-md-12 text-center">
    <a class="btn btn-success" role="button" href="{{ path('persons_edit', {'id': person.id}) }}">Zaaktualizuj</a>
    </div>
    <div class="col-md-6 text-left"> 
    <a class="btn btn-default" role="button" href="{{ path('persons_index') }}">Powrót do listy kandydatów</a>
    </div>
    

    <div class="col-md-6 text-right"> 
    {{ include('persons/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
